/**login.wxss**/
@import "/utils/common.wxss";
.container{
  padding:0 16rpx;
  font-size: 16px;
}
.logo_box{
  margin: 30rpx auto;
  text-align: center;
  margin-top: 40rpx;
}
.logo_img{
  width: 200rpx;
  height:200rpx;
}
.main{
  margin-top: 40rpx;
}
.input_box{
  width: 78%;
  margin: 20rpx auto;
}
.input_box input{
  color: #333333;
  width: 100%;
  text-align: center;
  padding-bottom: 6rpx;
  border-bottom:1px solid #666666;
}
.input_box_password{
  position: relative;
  display: flex;
  display: -webkit-flex;
  align-items: flex-end;
}
.input_box_password input{
  width: 100%;
  z-index: 100;
  padding-bottom: 6rpx;
  margin-top: 30px;
  border-bottom:1px solid #666666;
}
.input_box_password button{
  position: absolute;
  bottom: 0;
  right: 0;
  z-index: 200;
  width: 28%;
  padding: 0;
  height: 66rpx;
  line-height:66rpx;
  display: flex;
  display: -webkit-flex;
  text-align: center;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx 4rpx 0 0;
  background: #eeeeee;
}
.form_btn_box{
  /* display: flex; */
  display: -webkit-flex;
  margin:20rpx auto;
}
.form_btn_box .form_btn{
  margin-top: 20px;
  width:260rpx;
  height:80rpx;
  line-height:80rpx;
  font-size: 20px;
  color: #ffffff;
  border: none;
  border-radius: 50rpx;
  border-color: #758da6;
  background: #758da6;
}