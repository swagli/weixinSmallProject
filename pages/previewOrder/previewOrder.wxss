/* pages/orderDetaile/orderDetaile.wxss */
@import "/utils/common.wxss";
.container{
  margin: 0 12px;
  padding-bottom: 20px;
  font-size: 16px;
  color: #333333;
  background: #ffffff;
}
.timing{
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  text-align: center;
  align-items: center;
  padding: 10px 0;
  margin-bottom: 10px;
  background: #f7f7f7;
  border-bottom: 1px solid #d4e6f5;
}
.wait_time{
  font-size: 18px;
}
.success_time{
  font-size: 20px;
  padding: 16px 0;
  color: #ffffff;
  background: #1e82d2;
}
.timing .deta_time{
  font-size: 30px;
  width: 110px;
  padding: 0 6px;
}
.order_head{
  padding: 0 0 10px 0;
}
.order_head .head_data{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  padding: 2px 0;

}
.order_head .head_data .order_id_tit, .order_head .head_data .order_id_con{
  font-size: 18px;
  color: #000000;
}
.order_head .head_number{
  margin-bottom: 4px;
}
.task_status{
  color: #1e82d2;
}
.title{
  padding: 6px 0;
  font-size:18px;
  color: #333333;
  border-top: 1px solid #eeeeee;
  border-bottom: 1px solid #eeeeee;
}
.order_sender{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 0;
}
.order_sender .sender_logo{
  height: 40px;
  width: 40px;
}
.order_sender .sender_phone{
  height: 30px;
  width: 30px;
}
.order_sender .phonenumber{
  display: flex;
  display: -webkit-flex; 
}
.order_sender .sender_number{
  width: 88px;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.order_info{
  font-size: 14px;
  padding: 10px 0;
}
.order_info .location_info{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  padding: 6px 0;
}
.order_info .location_tit{
  width: 30%;
}
.order_info .location_con{
  text-align: right;
  width: 70%;
}
.other_con{
  text-align: right;
  width: 100%;
}
.pay_box{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  padding: 10px 0;
  border-top: 1px solid #d4e6f5;
}
.pay_box .operation{
  color: #333333;
  height:36px;
  font-size:18px;
  line-height:32px;
  margin: 0;
  padding: 2px 12px;
  border-radius: 2px;
  background: #ffffff;
  border: 1px solid #eeeeee;
}
.pay_box .success_btn{
  height: 26px;
  line-height: 26px;
}
.pay_box .keepon{
  border: 1px solid #c0daf0;
  color: #ffffff;
  background: #1e82d2;
}
.pay_box .warning_recharge{
  padding: 2px 10px;
  background: #ff6600;
}
.price_additional{
  color: #ff6600;
  text-align:right;
}
.price_additional text{
  font-size: 12px;
  color: #999999;
}