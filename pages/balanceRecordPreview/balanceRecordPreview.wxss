/* pages/orderDetaile/orderDetaile.wxss */
@import "/utils/common.wxss";
.container{
  margin: 0 12px;
  padding-bottom: 20px;
  font-size: 16px;
  color: #333333;
  background: #ffffff;
}
.timing{
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  text-align: center;
  align-items: center;
  padding: 10px 0;
  margin-bottom: 10px;
  background: #f7f7f7;
  border-bottom: 1px solid #eeeeee;
}
.wait_time{
  font-size: 16px;
}
.success_time{
  font-size: 20px;
  padding: 16px 0;
  color: #ffffff;
  background: #1e82d2;
}
.timing .deta_time{
  font-size: 30px;
  width: 110px;
  padding: 0 6px;
}
.order_head{
  padding: 0 0 10px 0;
}
.order_head .head_data{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  padding: 2px 0;

}
.order_head .head_number{
  margin-bottom: 4px;
}
.task_status{
  color: #1e82d2;
}
.record_number_box{
  margin-top: 10px;
}
.record_number{
  font-size: 20px;
  color: #ff6600;
}
.pay_box{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  padding: 10px 0;
  border-top: 1px solid #eeeeee;
}
.pay_box .operation{
  color: #333333;
  height: 30px;
  font-size: 16px;
  line-height: 26px;
  margin: 0;
  padding: 2px 10px;
  border-radius: 2px;
  background: #ffffff;
  border: 1px solid #eeeeee;
}
.pay_box .success_btn{
  height: 26px;
  line-height: 26px;
}
.pay_box .keepon{
  border: 1px solid #c0daf0;
  color: #ffffff;
  background: #1e82d2;
}
.pay_box .warning_recharge{
  padding: 2px 10px;
  background: #ff6600;
}