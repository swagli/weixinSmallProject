/**order.wxss**/
@import "/utils/common.wxss";
page{
  background-color: #ffffff;
}
.container{
  padding-top: 1rpx;
  font-size: 16px;
  height: 100%;
  width:100%;
}
.tit_box{
  font-size: 16px;
  color: #777777;
  margin:6px 0 5px 0;
  padding-bottom: 20px;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: center;
}
.tit_box .tit_btn{
  width: 32%;
  padding: 3px 0;
  text-align: center;
  border:1px solid #bac3ee;
  background: #ffffff;
}
.tit_box .first_btn{
  border-radius: 2px 0 0 2px;
}
.tit_box .last_btn{
  border-left: 0;
  border-radius: 0 2px 2px 0;
}
.tit_box .tit_active{
  color: #817fe4;
}
.oeder_box{
  padding: 0 15rpx;
  background: #ffffff;
}
.order_list{
  padding-bottom: 16px;
  border-bottom: 1px solid #eeeeee;
}
.order_list .order_receive{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 0;
}
.order_list .order_receive .receive_tit{
  width: 15%;
  text-align: center;
  color: #6c01f7;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.order_list .order_receive .receive_address{
  width: 65%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.order_list .order_receive .receive_status{
  width: 20%;
  text-align: right;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.order_list .order_receive .receive_add_rit{
  height: 12px;
  width:12px;
}
.order_list .order_item{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  padding: 10px 0 20px 0;
}
.order_list .order_item image{
  width: 15%;
  height: 22px;
  margin-top: 1px;
}
.order_list .order_item .item_type{
  width: 65%;
}
.order_list .order_item .item_price{
  width: 20%;
  font-size: 12px;
  text-align: right;
}
.order_list .order_item .item_price .price_number{
  font-size: 16px;
}
.operation{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
}
.operation .order_type{
  font-size: 16px;
  width: 15%;
  text-align: center;
  margin-top: 4px;
}
.operation .order_ope{
  display: flex;
  display: -webkit-flex;
  justify-content: flex-end;
}
.operation .btn_order{
  font-size: 16px;
  margin-left: 10px;
  padding: 2px 4px;
  border:1px solid #cccccc;
  border-radius: 2px;
}
.operation .detaile_order{
  color:#fd8802;
  border:1px solid #fac8a7;
}